---
import Layout from "@/layouts/Layout.astro"

import AboutMe from "@/components/AboutMe.astro"
import Briefcase from "@/components/icons/Briefcase.astro"
import CodeIcon from "@/components/icons/Code.astro"
import Experience from "@/components/Experience.astro"
import ProfileCheck from "@/components/icons/ProfileCheck.astro"
import Projects from "@/components/Projects.astro"
import SectionContainer from "@/components/SectionContainer.astro"
import Hero from "@/components/Hero.astro"
import TitleSection from "@/components/TitleSection.astro"
import Modal from "@/components/Modal"
import Calendly from "@/components/Calendly.astro"
---

<Layout
  title="Porfolio de Carlos Eduardo - Senior Software Engineer"
  description="Senior Software Engineer, especializado en desarrollo full-stack y arquitectura de soluciones en la nube. Actualmente, lidero el equipo de ingeniería en Skolmi.com, donde implementé soluciones escalables que soportan a más de 3,000 usuarios activos y gestionan 500,000 visitas. Con certificación AWS y experiencia en migración a la nube, desarrollo de microservicios y optimización de procesos, he logrado aumentar la eficiencia operativa en un 40% y reducir costos en un 20%."
>
  <main class="px-4">
  <!-- <Modal client:load>
     <Calendly/>
  </Modal> -->

    <SectionContainer class="py-16 md:py-36">
      <Hero>
      </slot>
    </Hero>
    </SectionContainer>
    <div class="space-y-24">
    <SectionContainer id="experiencia">
      <TitleSection>
        <Briefcase class="size-8" />
        Experiencia laboral
      </TitleSection>
      <Experience />
    </SectionContainer>

    <SectionContainer id="proyectos">
      <TitleSection>
        <CodeIcon class="size-7" />
        Proyectos
      </TitleSection>
      <Projects />
    </SectionContainer>

    <SectionContainer id="sobre-mi">
      <TitleSection>
        <ProfileCheck class="size-8" />
        Sobre mí
      </TitleSection>
      <AboutMe />
    </SectionContainer>
  </div>
  </main>
</Layout>
